# Discord Intelligence Dashboard Environment Variables
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Set USE_POSTGRESQL=True to use PostgreSQL, False for SQLite
USE_POSTGRESQL=False

# PostgreSQL Settings (only used if USE_POSTGRESQL=True)
DB_NAME=discord_intelligence
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_HOST=localhost
DB_PORT=5432

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your-discord-bot-token-here
DISCORD_GUILD_ID=your-discord-server-id-here

# OpenAI Configuration (for summary feature)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Additional Settings
# LOG_LEVEL=INFO
# STATIC_ROOT=/path/to/static/files


